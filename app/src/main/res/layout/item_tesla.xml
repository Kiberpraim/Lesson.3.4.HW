<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item">

    <ImageView
        android:id="@+id/imageViewImage"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:padding="2dp"
        android:background="@drawable/rounded_background_textview"
        android:hint="Description"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@drawable/rounded_background_textview"
        android:hint="Title"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView_description"
        app:layout_constraintTop_toBottomOf="@+id/textView_description"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewImage"
        />

    <TextView
        android:id="@+id/textView_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@drawable/rounded_background_textview"
        android:hint="color"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_description"
        app:layout_constraintTop_toBottomOf="@+id/textView_description" />

    <TextView
        android:id="@+id/textView_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@drawable/rounded_background_textview"
        android:hint="price"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_description"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>